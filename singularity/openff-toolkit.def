Bootstrap: docker

From: mambaorg/micromamba

%environment
    export PATH=/opt/mamba/bin:${PATH}

%files
    openff-toolkit.yml env.yml

%post
    pwd 
    micromamba install -y -n base -f env.yml && micromamba clean --all --yes \
    && mkdir -p /opt/etc/bashrc \
    && echo -e "#! /bin/bash\n\n# script to activate the micromamba environment" > ~/.bashrc \
    && micromamba shell init -s bash -p ~/micromamba \
    && echo -e "\micromamba activate base" >> ~/.bashrc \
    && echo "echo \"Hello World\"" >>  ~/.bashrc \
    && micromamba clean -a \
    && cp ~/.bashrc /opt/etc/bashrc


