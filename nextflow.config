profiles {
    docker {
        docker {
            enabled = true
            temp = 'auto'
        }
    }
    singularity {
        singularity {
            enabled = true
            autoMounts = true
        }
    }
    slurm {
        process.executor = 'slurm' 
        process.time = '1d'
        //process.clusterOptions = '-q secondary'
        process.clusterOptions = '-q primary'
        process.memory = '16G'
        process.cpus = 8
        executor {
            name = 'slurm'
            queueSize = 50
            time = '1d'
            memory = '16G'
        }
        singularity {
            enabled = true
            autoMounts = true
        }
    }
    potoff {
        process.executor = 'slurm' 
        process.time = '1d'
        process.memory = '8G'
        process.cpus = 4
        process.clusterOptions = '--exclude=reslab32ai8111'
        executor {
            name = 'slurm'
            queueSize = 20
            time = '1d'
            memory = '8G'
        }
        singularity {
            enabled = true
            autoMounts = true
            runOptions = '-B $SINGULARITY_TMPDIR:/tmp -B $SINGULARITY_TMPDIR:/scratch'
            envWhitelist = ['SINGULARITY_TMPDIR']
        }
    }
}

/*
Set default parameters

Any parameters provided by the user with a -params-file or
with -- command-line arguments will override the values
defined below.
*/
params {
    help = false
    database = "FreeSolv"
    database_path = "$projectDir/databases/FreeSolv/database.txt"
    output_folder = "$projectDir/results"
    solvent_path = "$projectDir/solvents/solvent.csv"

    id_col = "compoundid"
    structure_col = "SMILES"
    reference_col = "experimentalvalue(kcal/mol)"
    samples = -1

    // DeepChem containers
    container__deep_chem = "go2432/deepchem:latest"

    // Set the containers to use for each component
    // BioBB containers
    container__biobb_amber = "quay.io/biocontainers/biobb_amber:4.1.0--pyhdfd78af_0"
    container__openff_toolkit = "go2432/openff-toolkit:0.14.4"

}
